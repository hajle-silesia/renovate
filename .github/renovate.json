{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _VERSION variables in Dockerfiles; source: https://docs.renovatebot.com/modules/manager/regex/#configuration-templates",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) (?:depName=(?<depName>.+?))? (?:packageName=(?<packageName>.+?))?(?:versioning=(?<versioning>[a-z-]+?))\\n(?:ENV|ARG) .+?_VERSION=(?<currentValue>.+?)\\n"
      ]
    }
  ]
}
