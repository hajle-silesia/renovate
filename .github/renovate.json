{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Updating annotated package versions in Dockerfiles",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*?depName=(?<depName>.*?)?\\s(ARG|ENV) .*?_VERSION=\"(?<currentValue>.*)\"\\s"
      ]
    }
  ]
}
