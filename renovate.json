{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*?datasource=(?<datasource>.*?)? depName=(?<depName>.*?)? cargo=(?<cargo>.*?)?\\sARG .*?_VERSION=(?<currentValue>.*?)?\\s"
      ],
      "registryUrls": [
        "https://apt.releases.hashicorp.com/debian?suite=stable&components=main,bookworm&binaryArch=amd64"
      ],
      "datasourceTemplate": "deb"
    }
  ]
}
